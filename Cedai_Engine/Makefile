# #############################################


# File sets
# #############################################

OBJECTS :=

OBJECTS += $(OBJDIR)/Cedai.o
OBJECTS += $(OBJDIR)/Interface.o
OBJECTS += $(OBJDIR)/Log.o
OBJECTS += $(OBJDIR)/Model_Loader.o
OBJECTS += $(OBJDIR)/PrimitiveProcessor.o
OBJECTS += $(OBJDIR)/Renderer.o
